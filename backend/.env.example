# Restaurant Dashboard Configuration
# Copy this file to .env and fill in your actual credentials

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-change-this

# Aloha Enterprise Online Credentials
ALOHA_URL=https://enterprise.alohaenterprise.com
ALOHA_USERNAME=your-aloha-username
ALOHA_PASSWORD=your-aloha-password

# NetChex Payroll Credentials
NETCHEX_URL=https://www.netchexonline.com
NETCHEX_USERNAME=your-netchex-username
NETCHEX_PASSWORD=your-netchex-password

# Restaurant IDs in Aloha (map to your locations)
# These are the store IDs as they appear in Aloha
RESTAURANT_MARIANOS_ARLINGTON_ID=store_001
RESTAURANT_MARIANOS_DALLAS_ID=store_002
RESTAURANT_HACIENDA_FRISCO_ID=store_003
RESTAURANT_HACIENDA_PLANO_ID=store_004
RESTAURANT_HACIENDA_COLLEYVILLE_ID=store_005

# Scraper Schedule (cron format - default: 1:30 AM daily)
SCRAPE_SCHEDULE=30 1 * * *

# Database
DATABASE_PATH=./database/restaurant_dashboard.db
